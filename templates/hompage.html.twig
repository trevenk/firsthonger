{% endblock %}

{% block body %}




    <div class="card text-center text-white mt-5">


        <div class="fixed-top py-3", id="short-logo", style="display: none; background-image: url('/img/homepagewrite-short.png');">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <form class="form-inline">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </li>
            </ul>
        </div>
        <img class="card-img" src="{{ asset('img/homepagewrite.png') }}" alt="Card image", id="logo">
        <div class="card-img-overlay align-middle", style="margin-top: 15%", id="navbart">
            <div >
                <h4 class="card-title"><b>Card title</b></h4>
                <p class="card-text"><b>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</b></p>
